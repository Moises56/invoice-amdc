// Facturas List Styles - Modern Design

// Variables personalizadas
:host {
  --primary-color: #5ccedf;
  --primary-light: #7dd8e7;
  --primary-dark: #47b5c7;
  --success-color: #10b981;
  --warning-color: #f59e0b;
  --danger-color: #ef4444;
  --neutral-50: #f8fafc;
  --neutral-100: #f1f5f9;
  --neutral-200: #e2e8f0;
  --neutral-300: #cbd5e1;
  --neutral-400: #94a3b8;
  --neutral-500: #64748b;
  --neutral-600: #475569;
  --neutral-700: #334155;
  --neutral-800: #1e293b;
  --neutral-900: #0f172a;
  --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  --border-radius: 12px;
  --border-radius-lg: 16px;
}

.sticky-header {
  position: sticky;
  top: 0;
  z-index: 10;
  background: linear-gradient(135deg, var(--neutral-50) 0%, #ffffff 100%);
  border-bottom: 1px solid var(--neutral-200);
  padding: 1.5rem 1rem;
  margin-bottom: 1rem;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);

  .header-stats {
    margin-bottom: 1.5rem;

    h1 {
      font-size: 1.875rem;
      font-weight: 700;
      color: var(--neutral-800);
      margin: 0 0 1.5rem 0;
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .stats-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 1rem;

      .stat-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.25rem;
        background: linear-gradient(135deg, #ffffff 0%, var(--neutral-50) 100%);
        border-radius: var(--border-radius);
        border: 1px solid var(--neutral-200);
        box-shadow: var(--shadow-md);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;

        &::before {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          height: 3px;
          background: var(--primary-color);
          transform: scaleX(0);
          transition: transform 0.3s ease;
        }

        &:hover {
          transform: translateY(-2px);
          box-shadow: var(--shadow-lg);
          border-color: var(--primary-color);

          &::before {
            transform: scaleX(1);
          }
        }

        ion-icon {
          font-size: 1.75rem;
          color: var(--primary-color);
          padding: 0.5rem;
          background: rgba(92, 206, 223, 0.1);
          border-radius: 8px;
          transition: all 0.3s ease;
        }

        div {
          display: flex;
          flex-direction: column;

          .stat-number {
            font-size: 1.5rem;
            font-weight: 800;
            color: var(--neutral-800);
            line-height: 1.2;
          }

          .stat-label {
            font-size: 0.75rem;
            color: var(--neutral-500);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
          }
        }

        // Estados específicos con colores temáticos
        &.success {
          ion-icon {
            color: var(--success-color);
            background: rgba(16, 185, 129, 0.1);
          }
        }

        &.pending {
          ion-icon {
            color: var(--warning-color);
            background: rgba(245, 158, 11, 0.1);
          }
        }

        &.cancelled {
          ion-icon {
            color: var(--danger-color);
            background: rgba(239, 68, 68, 0.1);
          }
        }

        &.success {
          border-color: var(--ion-color-success);
          ion-icon {
            color: var(--ion-color-success);
          }
        }

        &.pending {
          border-color: var(--ion-color-warning);
          ion-icon {
            color: var(--ion-color-warning);
          }
        }

        &.cancelled {
          border-color: var(--ion-color-danger);
          ion-icon {
            color: var(--ion-color-danger);
          }
  }

  .search-filters {
    margin-top: 1rem;

    ion-searchbar {
      --background: #ffffff;
      --border-radius: var(--border-radius);
      --box-shadow: var(--shadow-md);
      --color: var(--neutral-800);
      --placeholder-color: var(--neutral-400);
      --icon-color: var(--primary-color);
      --clear-button-color: var(--neutral-400);
      margin-bottom: 1.25rem;
      border: 1px solid var(--neutral-200);
      border-radius: var(--border-radius);
      transition: all 0.3s ease;

      &:hover {
        --box-shadow: var(--shadow-lg);
        border-color: var(--primary-color);
      }
    }

    .filters-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      align-items: stretch;

      .filter-item {
        --background: #ffffff;
        --border-radius: var(--border-radius);
        --padding-start: 1rem;
        --padding-end: 1rem;
        --min-height: 48px;
        border: 1px solid var(--neutral-200);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-sm);
        transition: all 0.3s ease;

        &:hover {
          border-color: var(--primary-color);
          box-shadow: var(--shadow-md);
        }

        &:focus-within {
          border-color: var(--primary-color);
          box-shadow: 0 0 0 3px rgba(92, 206, 223, 0.1);
        }

        ion-select {
          --placeholder-color: var(--neutral-400);
          --color: var(--neutral-800);
          font-weight: 500;
        }

        ion-label {
          color: var(--neutral-600);
          font-weight: 600;
          font-size: 0.875rem;
        }
      }

      .clear-filters-btn {
        --background: #ffffff;
        --color: var(--primary-color);
        --border-radius: var(--border-radius);
        height: 48px;
        border: 1px solid var(--primary-color);
        font-weight: 600;
        transition: all 0.3s ease;

        &:hover {
          --background: var(--primary-color);
          --color: white;
          transform: translateY(-1px);
          box-shadow: var(--shadow-md);
        }
      }
    }
  }
}

// Content Styles
.facturas-content {
  padding: 0 1rem 1rem;

  .facturas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
    padding: 0;

    // Responsive breakpoints
    @media (max-width: 768px) {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .factura-card {
      border-radius: var(--border-radius-lg);
      box-shadow: var(--shadow-md);
      border: 1px solid var(--neutral-200);
      background: linear-gradient(135deg, #ffffff 0%, var(--neutral-50) 100%);
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      position: relative;

      // Estado visual indicator
      &::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: var(--neutral-300);
        transition: all 0.3s ease;
      }

      &:hover {
        transform: translateY(-4px) scale(1.02);
        box-shadow: var(--shadow-lg);
        border-color: var(--primary-color);

        &::before {
          width: 6px;
        }
      }

      // Estado-based styling
      &.pendiente {
        &::before {
          background: var(--warning-color);
        }
        
        .status-badge {
          background: rgba(245, 158, 11, 0.1);
          color: var(--warning-color);
          border: 1px solid rgba(245, 158, 11, 0.2);
        }
      }

      &.pagada {
        &::before {
          background: var(--success-color);
        }
        
        .status-badge {
          background: rgba(16, 185, 129, 0.1);
          color: var(--success-color);
          border: 1px solid rgba(16, 185, 129, 0.2);
        }
      }

      &.anulada {
        &::before {
          background: var(--danger-color);
        }
        
        .status-badge {
          background: rgba(239, 68, 68, 0.1);
          color: var(--danger-color);
          border: 1px solid rgba(239, 68, 68, 0.2);
        }
      }

      &.vencida {
        &::before {
          background: var(--neutral-600);
        }
        
        .status-badge {
          background: rgba(71, 85, 105, 0.1);
          color: var(--neutral-600);
          border: 1px solid rgba(71, 85, 105, 0.2);
        }
      }

      ion-card-header {
        padding: 1.5rem 1.25rem 1rem;
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);

        .card-header-row {
          display: flex;
          justify-content: space-between;
          align-items: flex-start;
          margin-bottom: 1rem;

          .factura-number {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-weight: 700;
            color: var(--neutral-800);
            font-size: 1.1rem;

            ion-icon {
              color: var(--primary-color);
              font-size: 1.25rem;
              padding: 0.25rem;
              background: rgba(92, 206, 223, 0.1);
              border-radius: 6px;
            }
          }

          .status-badge {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 0.5rem 0.75rem;
            border-radius: 20px;
            white-space: nowrap;
          }
        }

        .local-info {
          font-size: 1rem;
          font-weight: 600;
          color: var(--neutral-700);
          display: flex;
          align-items: center;
          gap: 0.75rem;
          margin-bottom: 0.5rem;

          ion-icon {
            color: var(--primary-color);
            font-size: 1.25rem;
            padding: 0.25rem;
            background: rgba(92, 206, 223, 0.1);
            border-radius: 6px;
          }
        }
      }

      ion-card-content {
        padding: 0 1.25rem 1.5rem;
        background: rgba(255, 255, 255, 0.9);

        .factura-details {
          .detail-row {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            margin-bottom: 1rem;
            padding: 0.75rem;
            background: rgba(248, 250, 252, 0.5);
            border-radius: 8px;
            border: 1px solid var(--neutral-100);
            transition: all 0.3s ease;

            &:hover {
              background: rgba(248, 250, 252, 0.8);
              border-color: var(--neutral-200);
            }

            ion-icon {
              color: var(--primary-color);
              font-size: 1.125rem;
              margin-top: 2px;
              flex-shrink: 0;
              padding: 0.25rem;
              background: rgba(92, 206, 223, 0.1);
              border-radius: 6px;
            }

            .detail-content {
              flex: 1;
              display: flex;
              flex-direction: column;
              gap: 0.375rem;

              .detail-label {
                font-size: 0.75rem;
                color: var(--neutral-500);
                text-transform: uppercase;
                font-weight: 600;
                letter-spacing: 0.5px;
              }

              .detail-value {
                font-size: 0.9rem;
                color: var(--neutral-800);
                font-weight: 600;

                &.monto {
                  font-size: 1.25rem;
                  font-weight: 800;
                  color: var(--primary-color);
                  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
                  -webkit-background-clip: text;
                  -webkit-text-fill-color: transparent;
                  background-clip: text;
                }
              }
            }

            &.monto-row {
              margin-bottom: 1rem;
              padding-bottom: 0.75rem;
              border-bottom: 1px solid #f0f2f5;
            }
          }

          .dates-section {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 0.75rem;
            margin-bottom: 1rem;

            .date-item {
              display: flex;
              justify-content: space-between;
              align-items: center;
              margin-bottom: 0.5rem;

              &:last-child {
                margin-bottom: 0;
              }

              .date-label {
                font-size: 0.75rem;
                color: var(--ion-color-medium);
                font-weight: 500;
              }

              .date-value {
                font-size: 0.8rem;
                color: var(--ion-color-dark);
                font-weight: 600;
              }
            }
          }

          .concepto-section {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 0.75rem;
            margin-bottom: 1rem;
          }
        }

        .quick-actions {
          display: flex;
          justify-content: flex-end;
          margin-top: 1rem;
          padding-top: 0.75rem;
          border-top: 1px solid #f0f2f5;

          ion-button {
            --color: #5ccedf;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
          }
        }
      }
    }
  }
}

// Loading
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  text-align: center;

  ion-spinner {
    margin-bottom: 1rem;
    --color: #5ccedf;
  }

  p {
    color: var(--ion-color-medium);
    font-size: 0.9rem;
  }
}

// Empty state
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 3rem 2rem;
  text-align: center;

  ion-icon {
    color: var(--ion-color-light);
    margin-bottom: 1rem;
  }

  h3 {
    color: var(--ion-color-dark);
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  p {
    color: var(--ion-color-medium);
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }

  ion-button {
    --background: #5ccedf;
    --color: white;
  }
}

// FAB
ion-fab-button {
  --background: #5ccedf;
  --color: white;
  --box-shadow: 0 4px 16px rgba(92, 206, 223, 0.4);

  &:hover {
    --background: #4db8c9;
  }
}

// Responsive design
@media (max-width: 768px) {
  .sticky-header {
    .header-stats {
      .stats-cards {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    .search-filters {
      .filters-row {
        flex-direction: column;
        align-items: stretch;

        .filter-item,
        .clear-filters-btn {
          width: 100%;
        }
      }
    }
  }

  .facturas-content {
    padding: 0 0.5rem 1rem;

    .facturas-grid {
      ion-col {
        padding: 0.25rem;
      }

      .factura-card {
        ion-card-header {
          .card-header-row {
            .factura-number {
              font-size: 0.8rem;
            }

            .estado-badge {
              font-size: 0.7rem;
            }
          }

          .local-info {
            font-size: 0.9rem;
          }
        }

        ion-card-content {
          .factura-details {
            .detail-row {
              .detail-content {
                .detail-value {
                  font-size: 0.85rem;

                  &.monto {
                    font-size: 1rem;
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}

// Print styles
@media print {
  .sticky-header,
  ion-fab,
  .quick-actions {
    display: none !important;
  }

  .facturas-content {
    .factura-card {
      box-shadow: none;
      border: 1px solid #ccc;
      break-inside: avoid;
      margin-bottom: 1rem;
    }
  }
}
